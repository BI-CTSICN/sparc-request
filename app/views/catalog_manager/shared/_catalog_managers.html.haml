.cms
  - if entity.catalog_managers
    %table
      %thead
        %tr
          %th= t("cm_shared.labels.name_email")
          -if @user.is_overlord?
            %th= t("cm_shared.labels.can_edit")
          %th= t("cm_shared.labels.delete")
      %tbody
        - entity.catalog_managers.each do |cm|
          %tr
            %td= cm.identity.display_name
            -if @user.is_overlord?
              %td.check= check_box_tag "#{cm.id}_edit_historic_data", true, cm.edit_historic_data, :class => 'edit_historic_data', :org_id => entity.id, :identity => cm.id, :identity_user_id => cm.identity_id, :current_user_id => @user.id, :edit_historic_data => cm.edit_historic_data
            %td= image_tag 'catalog_manager/cancel.png', :id => cm.id, :class => 'cm_delete'
            

  = text_field_tag 'new_cm', t(:organization_form)[:new_cm]
