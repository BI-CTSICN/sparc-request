.ses
  %table.se_clone_table{:style => "display:none"}
    %tbody
      %tr
        %td
          = hidden_field_tag "CLONE#{entity.class.to_s.downcase}[submission_emails_attributes][][email]", 'clone_only', :class => 'se_value'
          %span.se_display= t("cm_shared.labels.clone")
        %td= image_tag 'cancel.png', :class => 'se_delete'

  - style = (!entity.submission_emails or entity.submission_emails.empty?) ? 'display:none;' : ''
  %table.se_table{:style => style}
    %thead
      %tr
        %th= t("cm_shared.labels.email")
        %th= t("cm_shared.labels.delete")
    %tbody
      - if entity.submission_emails
        - entity.submission_emails.each do |se|
          %tr
            %td
              = hidden_field_tag "#{entity.class.to_s.downcase}[submission_emails_attributes][][email]", se.email, :class => 'se_value'
              = hidden_field_tag "#{entity.class.to_s.downcase}[submission_emails_attributes][][id]", se.id, :class => 'se_value'
              %span.se_display= se.email
            %td= image_tag 'cancel.png', :id => se.id, :class => 'se_delete'

  = text_field_tag 'new_se', t("cm_shared.labels.new_submission")