.clear
- cache institutions do
  #institution_accordion
    - institutions.each do |institution|
      - next unless institution.is_available? or institution.is_available.nil?
      %h3
        = link_to institution.name, update_description_catalog_path(institution), :class => institution.css_class
      %div.institution
        .provider_accordion
          - institution.providers.order('`order`').each do |provider|
            - next unless provider.is_available? or provider.is_available.nil?
            %h3
              = link_to provider.name, update_description_catalog_path(provider), :class => provider.css_class
            %div.provider
              - provider.programs.order('`order`').each do |program|
                - next unless program.is_available? or program.is_available.nil?
                %h4
                  = link_to program.name, update_description_catalog_path(program), :remote => true, :method => :post
