%h1 Edit cover letter
= form_for [:study_tracker, @cover_letter.sub_service_request, @cover_letter] do |f|
  =f.hidden_field :content
  #cover_letter_content_editor.contenteditable{ contenteditable: true}
    = @cover_letter.content.html_safe
    
  %p.buttons
    = f.submit t(:study_tracker)[:save], class: 'ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only ui-state-hover ui-state-active'
    = link_to "Cancel", study_tracker_sub_service_request_path(@sub_service_request)
