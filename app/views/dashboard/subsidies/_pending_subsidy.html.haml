- if subsidy.present?
  #subsidy_table
    .row
      .col-xs-12
        .col-xs-3
          %label= t(:fulfillments)[:subsidies][:pi]
        .col-xs-3
          %label= t(:fulfillments)[:subsidies][:percent]
        .col-xs-2
          %label= t(:fulfillments)[:subsidies][:effective_current_total_cost]
        .col-xs-2
          %label= t(:fulfillments)[:subsidies][:user_display_total_cost]
        .col-xs-2
          %label.pull-right= t(:fulfillments)[:subsidies][:delete]
    .row
      .col-xs-12
        .col-xs-3.center-block
          .input-group
            .input-group-addon $
            = text_field_tag "subsidy_pi_contribution", subsidy.try(:pi_contribution).try(:/, 100.0), :'data-subsidy_id' => subsidy.id, :class => 'form-control'
        .col-xs-3.center-block
          .input-group
            = text_field_tag "subsidy_percent_subsidy", subsidy.try(:stored_percent_subsidy).try(:round, 2), :'data-subsidy_id' => subsidy.id, :class => 'form-control'
            .input-group-addon %
        .col-xs-2.center-block.subsidy_effective_current_cost
          = number_to_currency(subsidy_effective_current_total(sub_service_request, subsidy))
        .col-xs-2.center-block.subsidy_user_display_cost#direct_cost_total{data: { direct_cost_total: sub_service_request.direct_cost_total, max_dollar_cap: subsidy.max_dollar_cap, max_percentage: subsidy.max_percentage }}
          = number_to_currency(subsidy_user_display_total(sub_service_request, subsidy))
        .col-xs-2
          %button.btn.btn-xs.btn-danger.center-block#delete_subsidy{:'data-subsidy_id' => subsidy.id}
            %span.glyphicon.glyphicon-remove

- else
  .col-xs-12
    %p.blank_requests
      = t(:fulfillments)[:subsidies][:no_subsidy]
    %button.btn.btn-sm.btn-success#add_subsidy_link{:'data-sub_service_request_id' => sub_service_request.try(:id)}
      %span= t(:fulfillments)[:subsidies][:link]
