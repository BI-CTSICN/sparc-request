.modal-dialog
  .modal-content
    = form_for ([:dashboard, subsidy]), {remote: true, html: {class: "form-horizontal", role: "form"}} do |form|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only &times;
        %h4.modal-title.text-center= header_text
      .modal-body
        #modal_errors
        .row
          .col-md-12
            = form.hidden_field :sub_service_request_id
            .form-group
              = form.label "pi_contribution", "PI Contribution", class: "col-sm-4 control-label"
              .input-group.col-sm-7
                %span.input-group-addon $
                = form.text_field "pi_contribution", { class: 'form-control', value: cents_to_dollars_float(subsidy.pi_contribution) }
            .form-group
              = form.label "stored_percent_subsidy", "Percent Subsidy", class: "col-sm-4 control-label"
              .input-group.col-sm-7
                = form.text_field "stored_percent_subsidy", {class: 'form-control'}
                %span.input-group-addon %
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
          %input.btn.btn-primary{type: 'submit', value: "Save"}
