= form_for arm, {remote: true, url: portal_arm_path(arm), html: {class: "form-horizontal edit_arm", role: "form"}} do |a|
  = hidden_field_tag :service_request_id, service_request.id
  = hidden_field_tag :sub_service_request_id, sub_service_request.id
  .form-group
    = a.label "name", "Arm Name", class: "col-sm-4 control-label"
    .col-sm-7= a.text_field "name", {class: 'form-control'}
  .form-group
    = a.label "subject_count", "Subject Count", class: "col-sm-4 control-label"
    .col-sm-7= a.text_field "subject_count", {class: 'form-control'}
  .modal-footer
    .center-block
      %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
      %input.btn.btn-primary{type: 'submit', value: "Save"}