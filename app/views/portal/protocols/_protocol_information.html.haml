- rights = user_rights(protocol_role)
- pi_count_var = protocol.principal_investigators.size
%input{:type => 'hidden', :value => "#{pi_count_var}", :id => "pi_count_#{protocol.id}"}
.protocol-information-title.ui-corner-top Information:
.protocol-information-body.ui-corner-bottom
  %ul
    %li
      = "#{protocol.type.capitalize} ID:"
      = protocol.try(:id)
    %li
      Title:
      = protocol.try(:title)
    %li
      Short Title:
      = protocol.try(:short_title)
    - if protocol._type == 'study'
      %li
        Sponsor Name:
        = protocol.try(:sponsor_name)
    %li
      = display_funding_source(protocol)

.protocol-information-button.ui-corner-all{:'data-permission' => rights.to_s, :'data-protocol_id' => protocol.id}
  = "EDIT #{protocol.type.capitalize} Information"

%br
.protocol-information-title.ui-corner-top Authorized Users:
.protocol-information-table
  %table{:width => "100%"}
    %tr
      %th Name:
      %th Role:
      %th Proxy Rights:
      %th{:colspan => 2} Actions
    - protocol.project_roles.each do |pr|
      - u = pr.identity
      %tr
        %td
          = u.first_name
          = u.last_name
        %td= USER_ROLES.detect{|k,v| v == pr.role}.first
        %td= PROXY_RIGHTS.key(pr.project_rights)
        %td
          %a.edit-associated-user-button.btn{:href => "javascript:void(0)", :style => 'font-size:10px', :'data-protocol_id' => protocol.id, :'data-user_id' => u.id, :'data-permission' => rights.to_s, :'data-pr_id' => pr.id} Edit
        %td
          /%a.delete-associated-user-button.btn{:href => "javascript:void(0)", :style => 'font-size:10px', :'data-protocol_id' => protocol.id, :'data-current_user_role' => user.role, :'data-pr_id' => u.id, :'data-user_id' => u.id, :'data-user_role' => pr.role, :'data-permission' => rights.to_s} Delete
          %a.delete-associated-user-button.btn{:href => "javascript:void(0)", :style => 'font-size:10px', :'data-protocol_id' => protocol.id, :'data-current_user_role' => pr.role, :'data-pr_id' => pr.id, :'data-user_id' => u.id, :'data-user_role' => pr.role, :'data-permission' => rights.to_s} Delete


    - if protocol.project_roles.count == 0
      Currently no authorized users

.associated-user-button.ui-corner-all{:'data-protocol_id' => protocol.id, :'data-permission' => rights.to_s}
  + ADD An Authorized User

%br


.service-request-title.ui-corner-top Service Requests:
.service_request-body
  %table.list{:style => 'font-size:10px;', :width => "100%"}
    %tr{:style => 'width:100%'}
      %th{:style => 'width:16%'} SRID:
      %th{:style => 'width:16%'} Submitted Date:
      %th{:style => 'width:16%'} Provider:
      %th{:style => 'width:16%'} Program/Core:
      %th{:style => 'width:9%'} Status:
      %th{:style => 'width:9%'}
      %th{:style => 'width:9%'}
      %th{:style => 'width:9%'}

    - protocol.service_requests.each do |sr|
      - first_ssr = true
      - css_class = cycle('odd', 'even', :name => 'protocol')
      - sr.sub_service_requests.each do |ssr|
        %tr.service_request.center{:class => css_class}
          %td
            = pretty_ssr_id(protocol, ssr)
          %td
            = sr.submitted_at.to_date.strftime('%m/%d/%Y') rescue ''
          %td
            = ssr.organization.name
          %td
            = pretty_program_core(ssr)
          %td
            = ssr.status
          %td
            - if @user.can_edit_sub_service_request? ssr
              %center
                %a.edit_service_request.btn{:href => "javascript:void(0);", :'data-permission' => rights.to_s, :'data-url' => "/service_requests/#{sr.id}/catalog?sub_service_request_id=#{ssr.id}&from_user_portal=true"} Edit
          %td
            %center
              %a.view-sub-service-request-button.btn{:href => "javascript:void(0);", :'data-service_request_id' => ssr.service_request.id, :'data-protocol_id' => protocol.id, :'data-status' => ssr.status} View
          - if sr.sub_service_requests.size > 0 && first_ssr
            - first_ssr = false
            %td{:rowspan => sr.sub_service_requests.size}
              - if @user.can_edit_service_request? sr
                %a.edit_service_request.btn{:href => "javascript:void(0);", :'data-permission' => rights.to_s, :'data-url' => "/service_requests/#{sr.id}/catalog?from_user_portal=true&edit_original=true"} Edit Original
    - reset_cycle('protocol')



.service-request-button.ui-corner-top{:'data-url' => "/?protocol_id=#{protocol.id}", :'data-permission' => rights.to_s}= "+ ADD Additional Services to this #{protocol.type.capitalize}"

