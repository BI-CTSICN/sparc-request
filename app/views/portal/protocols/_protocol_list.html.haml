.container-fluid.protocol-list
  .panel-group#protocol-accordion2
    - protocols.each do |protocol|
      .panel.panel-default{ class: "protocol-information-panel-#{protocol.id}" }
        .panel-heading.container-fluid.accordion-heading{ data: { parent: '#protocol-accordion2', toggle: 'collapse', target: "#collapse-#{protocol.id}", protocol_id: protocol.id } }
          .row
            .col-lg-8
              %ul.list-unstyled
                %li= "#{protocol.type.capitalize}: #{protocol.id} - #{protocol.short_title}"
                - if protocol.principal_investigators
                  %li= "PI(s): #{protocol.principal_investigators.map(&:display_name).join(', ')}"
            .col-lg-4
              %button.btn.btn-warning.protocol-archive-button.pull-right{ data: { protocol_id: protocol.id } }= "#{protocol.archived ? 'Unarchive' : 'Archive'} #{protocol.type.capitalize}"

        .panel-collapse.collapse{ id: "collapse-#{protocol.id}" }
          .panel-body
            .container-fluid{ class: "protocol-information-container-#{protocol.id}"}
.modal.fade#modal-area{ tabindex: -1, role: 'dialog', 'aria-hidden' => true }
