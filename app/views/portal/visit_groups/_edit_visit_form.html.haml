= form_for visit_group, {remote: true, url: portal_visit_group_path(visit_group), html: {class: "form-horizontal new_visit", role: "form"}} do |a|
  = hidden_field_tag :service_request_id, service_request.id
  = hidden_field_tag :sub_service_request_id, sub_service_request.id
  .form-group
    = a.label "name", "Name", class: "col-sm-4 control-label"
    .col-sm-7= a.text_field "name", {class: 'form-control'}
  .form-group
    = a.label "day", "Day", class: "col-sm-4 control-label"
    .col-sm-7= a.text_field "day", {class: 'form-control', maxlength: 4}
  .form-group
    = a.label "window_before", "Window Before", class: "col-sm-4 control-label"
    .col-sm-7= a.text_field "window_before", {class: 'form-control'}
  .form-group
    = a.label "window_after", "Window After", class: "col-sm-4 control-label"
    .col-sm-7= a.text_field "window_after", {class: 'form-control'}
  .modal-footer
    .center-block
      %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
      %input.btn.btn-primary#edit_visit_group_form_button{type: 'submit', value: "Save"}