%h3= t(:fulfillments)[:core_approvals][:header]
#core_approvals
  .approval
    %label= t(:fulfillments)[:core_approvals][:nursing]
    = check_box_tag "sub_service_request_nursing_nutrition_approved", true, @sub_service_request.nursing_nutrition_approved, :'data-sub_service_request_id' => @sub_service_request.id, :class => 'fulfillment_data', :disabled => @sub_service_request.nursing_nutrition_approved?

  .approval
    %label= t(:fulfillments)[:core_approvals][:lab]
    = check_box_tag "sub_service_request_lab_approved", true, @sub_service_request.lab_approved, :'data-sub_service_request_id' => @sub_service_request.id, :class => 'fulfillment_data', :disabled => @sub_service_request.lab_approved?

  .approval
    %label= t(:fulfillments)[:core_approvals][:imaging]
    = check_box_tag "sub_service_request_imaging_approved", true, @sub_service_request.imaging_approved, :'data-sub_service_request_id' => @sub_service_request.id, :class => 'fulfillment_data', :disabled => @sub_service_request.imaging_approved?
  .clear
