%h3= t(:fulfillments)[:subsidies][:header]
- unless @subsidy
  %p.blank_requests
    = t(:fulfillments)[:subsidies][:no_subsidy]
    = link_to t(:fulfillments)[:subsidies][:link], 'javascript:void(0);', :class => "add_subsidy_link", :'data-sub_service_request_id' => @sub_service_request.try(:id)
- else
  #subsidy_table
    %table
      %thead
        %tr
          %th= t(:fulfillments)[:subsidies][:pi]
          %th= t(:fulfillments)[:subsidies][:percent]
          %th= t(:fulfillments)[:subsidies][:cost]
          %th= t(:fulfillments)[:subsidies][:delete]
      %tbody
        %tr
          %td= text_field_tag "subsidy_pi_contribution", @subsidy.try(:pi_contribution).try(:/, 100.0), :'data-subsidy_id' => @subsidy.id, :class => 'fulfillment_data'
          %td= text_field_tag "subsidy_percent_subsidy", (@subsidy.try(:percent_subsidy).try(:*, 100.0)).try(:round, 2), :'data-subsidy_id' => @subsidy.id, :class => 'fulfillment_data'
          %td#direct_cost_total{:'data-direct_cost_total' => @sub_service_request.try(:direct_cost_total), :'data-max_dollar_cap' => @sub_service_request.organization.try(:subsidy_map).try(:max_dollar_cap), :'data-max_percentage' => @sub_service_request.organization.try(:subsidy_map).try(:max_percentage)}= number_to_currency(@sub_service_request.try(:direct_cost_total) / 100)
          %td= link_to(image_tag('portal/cancel.png'), 'javascript:void(0);', :'data-subsidy_id' => @subsidy.id, :class => 'delete_data')