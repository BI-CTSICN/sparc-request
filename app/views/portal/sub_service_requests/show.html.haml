:javascript
  $(document).ready( function() {
    Sparc.associated_users.ready();
  });

.admin-dashboard
  %p.col-xs-6.text-left
    = @user.full_name
    |
    = @user.email
  .col-xs-6.text-right
    = link_to "Return to Admin Portal", portal_admin_index_path, :class => "return_link btn btn-primary btn-sm"

#information
  #wrapper
    %table#ssr_info
      %thead
        %tr
          %th= t(:admin_dashboard)[:id]
          %th= t(:admin_dashboard)[:pi]
          %th= t(:admin_dashboard)[:requester]
          %th= t(:admin_dashboard)[:short_title]
          %th= t(:admin_dashboard)[:export]
          %th= t(:admin_dashboard)[:delete]
          - if USE_EPIC
            %th= t(:admin_dashboard)[:epic_interface]
      %tbody
        %tr
          %td
            = "#{@protocol.id}-#{@sub_service_request.ssr_id}"
          %td= @protocol.try(:principal_investigators).try(:first).try(:display_name)
          %td= @sub_service_request.try(:service_request).try(:service_requester).try(:display_name)
          %td= @protocol.try(:short_title)
          %td= link_to t(:admin_dashboard)[:export_link], service_request_path(@sub_service_request.service_request, :format => :xlsx, :admin_offset => 1), :class => "export_to_excel_button btn btn-sm btn-primary"
          %td= link_to "", "/portal/admin/sub_service_requests/#{@sub_service_request.id}", :method => :delete, :confirm => t(:admin_dashboard)[:delete_confirm], :class => "delete-ssr-button btn btn-sm btn-danger glyphicon glyphicon-remove"
          - if USE_EPIC
            %td= link_to t(:admin_dashboard)[:send_to_epic], 'javascript:void(0)', :class => "send_to_epic_button btn btn-sm btn-primary", :sub_service_request_id => @sub_service_request.id

.tabs{role: 'tabpanel'}
  %ul.nav.nav-tabs.nav-justified{role: 'tablist'}
    %li.custom-tab.ssr_tab.active{role: 'presentation'}
      = link_to t(:admin_dashboard)[:tabs][:fulfillment], "#fulfillment", {class: 'fulfillment-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'fulfillment-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:admin_dashboard)[:tabs][:protocol_info], "#protocol", {class: 'project-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'project-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:admin_dashboard)[:tabs][:docs], "#documents", {class: 'documents-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'documents-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:admin_dashboard)[:tabs][:related_srs], "#related_service_requests", {class: 'related_service_requests-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'related_service_requests-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:admin_dashboard)[:tabs][:users], "#associated_users", {class: 'associated_users-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'associated_users-tab'}
    %li.custom-tab.ssr_tab{role: 'presentation'}
      = link_to t(:admin_dashboard)[:tabs][:notifications], "#notifications", {class: 'notifications-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'notifications-tab'}

  .tab-content
    .tab-pane#fulfillment{role: 'tabpanel', class: 'active'}
      = render partial: 'portal/admin/fulfillment/fulfillment', locals: {protocol: @protocol, sub_service_request: @sub_service_request, service_request: @service_request, subsidy: @subsidy, approvals: @approvals}
    .tab-pane#protocol{role: 'tabpanel', style: 'padding:15px;'}
      = render :partial => 'portal/protocols/type_form'
      = render :partial => 'portal/protocols/form', :locals => {:protocol => @protocol, :admin => true}
    .tab-pane#documents{role: 'tabpanel'}
      = render 'portal/sub_service_requests/documents'
    .tab-pane#related_service_requests{role: 'tabpanel'}
      = render 'portal/sub_service_requests/related_service_requests'
    .tab-pane#associated_users{role: 'tabpanel'}
      = render 'portal/sub_service_requests/associated_users'
    .tab-pane#notifications{role: 'tabpanel'}
      = render 'portal/notifications/notifications'

= render 'cwf_building'
  


