:javascript
  $(document).ready( function() {
    Sparc.admin.ready();
  });


.row.admin-dashboard
  %p.col-xs-6.text-left
    = @user.full_name
    |
    = @user.email
  .col-xs-6.text-right
    = link_to "Create A Request", root_path, :class => 'create_new_request header_button btn btn-primary btn-md'
    - if @user.is_super_user?
      = link_to "Reporting", reports_path, :class => 'reporting header_button btn btn-primary btn-md'
    - if QUEUE_EPIC_EDIT_LDAP_UIDS.include?(current_user.ldap_uid)
      = link_to "View Epic Queue", portal_epic_queues_path, :class => 'epic_queues header_button btn btn-primary btn-md'

%table.sub_service_requests{id: "sub_service_requests_table", data: {toggle: 'table', search: "true", "show-columns" => "true", "show-refresh" => "true", "show-toggle" => "true", url: portal_admin_sub_service_requests_path(format: :json), striped: "true", "show-export" => "true", "export-types" => ['excel']}}
  %thead.primary-header
    %tr
      %th{data: {class: 'srid', align: "left", sortable: "true", field: "srid"}}
        SRID
      %th{data: {class: 'status', align: "left", sortable: "true", field: "status"}}
        Status
      %th{data: {class: 'short_title', align: "left", sortable: "true", field: "short_title"}}
        Short Title
      %th{data: {class: 'submitted', align: "left", sortable: "true", field: "submitted"}}
        Date Submitted
      %th{data: {class: 'service', align: "left", field: "service"}}
        Service
      %th{data: {class: 'requester', align: "left", sortable: "true", field: "requester"}}
        Requester
      %th{data: {class: 'pi', align: "left", sortable: "true", field: "pi"}}
        PI
      %th{data: {class: 'assigned', align: "left", field: "assigned"}}
        Assigned To
      %th{data: {class: 'org_list', align: "left", field: "org_list"}}
        Provider/Program/Core