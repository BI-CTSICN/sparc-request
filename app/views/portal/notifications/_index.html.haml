= form_tag("portal/notifications/mark_as_read/", :method => :put, :remote => true, :class => 'notifications-form') do
  %input.read_or_unread_field{:type => 'hidden', :name => 'read_or_unread', :value => "unread"}
  .left.notifications
    .notification-action-bar.ui-corner-all
      %a.white_link.select_all{:href => 'javascript:void(0)'}
        Select All
      |
      %a.white_link.deselect_all{:href => 'javascript:void(0)'}
        Deselect All
      .right
        %a.white_link#read_or_unread_link{:href => 'javascript:void(0)'}
          Mark as Unread
      .clear

    .notifications-header
      .icon-column
      .from-column
        %strong From:
      .subject-column
        %strong Subject:
      .preview-column
        %strong Preview:
      .received-column
        %strong Received:
      .notification-selection

    - @notifications.each do |notification|
      = render 'portal/notifications/notification', :notification => notification

.right-dashboard
  = render 'portal/home/user_information'
