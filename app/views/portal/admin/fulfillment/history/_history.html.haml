.history_tabs{role: 'tabpanel'}
  %ul.nav.nav-tabs.nav-justified{role: 'tablist'}
    %li.custom-tab.history_tab.active{role: 'presentation'}
      = link_to "Status History", "#service_request_status_changes", {class: 'status-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'status-tab'}
    %li.custom-tab.history_tab{role: 'presentation'}
      = link_to "Subsidy History", "#ssr_subsidy_changes", {class: 'subsidy-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'subsidy-tab'}
    %li.custom-tab.history_tab{role: 'presentation'}
      = link_to t(:fulfillments)[:approval_history][:header], "#service_request_approval_changes", {class: 'approval-tab', "data-toggle" => 'tab', role: 'tab', "aria-controls" => 'approval-tab'}

  .tab-content
    .tab-pane#service_request_status_changes{role: 'tabpanel', class: 'active'}
      = render partial: 'portal/admin/fulfillment/history/status_changes', locals: { sub_service_request: sub_service_request }

    .tab-pane#ssr_subsidy_changes{role: 'tabpanel'}
      = render partial: 'portal/admin/fulfillment/history/subsidy_changes', locals: { sub_service_request: sub_service_request, subsidy: subsidy}

    .tab-pane#service_request_approval_changes{role: 'tabpanel'}
      = render partial: 'portal/admin/fulfillment/history/approval_changes', locals: { approvals: approvals }

