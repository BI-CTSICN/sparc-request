.col-sm-12
  .col-sm-4
    #service_request_status
      .row
        %h4= t(:service_requests)[:info][:text1]
      .row#service_request_status_dropdown
        = select_tag "sub_service_request_status", options_for_select(sub_service_request ? sub_service_request.organization.get_available_statuses.invert : [], sub_service_request.try(:status)), :'data-sub_service_request_id' => sub_service_request.id, :class => 'selectpicker'
  .col-sm-4
    #service_request_owner
      .row
        %h4= t(:service_requests)[:info][:text2]
      .row#service_request_owner_dropdown
        = service_request_owner_display(sub_service_request)
  .col-sm-4
    #study_tracker_access
      = ready_for_fulfillment_display(@user, sub_service_request)

