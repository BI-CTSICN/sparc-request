%h4= t(:fulfillments)[:timeline][:header]
#timeline_table
  .row
    .col-xs-12
      .col-xs-3
        %label= t(:fulfillments)[:timeline][:start_date]
      .col-xs-3
        %label= t(:fulfillments)[:timeline][:end_date]
      .col-xs-3
        %label= t(:fulfillments)[:timeline][:arranged_date]
      .col-xs-3
        %label= t(:fulfillments)[:timeline][:contacted_date]
  .row
    .col-xs-12
      .col-xs-3
        = text_field_tag "protocol_start_date_picker", protocol.try(:start_date).try(:strftime, '%D'), :class => 'date datepicker form-control', :readonly => true
        = hidden_field_tag "protocol_start_date", protocol.try(:start_date).try(:strftime, "%F"), :'data-protocol_id' => protocol.id, :class => 'fulfillment_data'
      .col-xs-3
        = text_field_tag "protocol_end_date_picker", protocol.try(:end_date).try(:strftime, '%D'), :class => 'date datepicker form-control', :readonly => true
        = hidden_field_tag "protocol_end_date", protocol.try(:end_date).try(:strftime, "%F"), :'data-protocol_id' => protocol.id, :class => 'fulfillment_data'
      .col-xs-3
        = text_field_tag "sub_service_request_consult_arranged_date_picker", sub_service_request.try(:consult_arranged_date).try(:strftime, '%D'), :class => 'date datepicker form-control'
        = hidden_field_tag "sub_service_request_consult_arranged_date", sub_service_request.try(:consult_arranged_date).try(:strftime, "%F"), :'data-sub_service_request_id' => sub_service_request.id, :class => 'fulfillment_data'
      .col-xs-3
        = text_field_tag "sub_service_request_requester_contacted_date_picker", sub_service_request.try(:requester_contacted_date).try(:strftime, '%D'), :class => 'date datepicker form-control'
        = hidden_field_tag "sub_service_request_requester_contacted_date", sub_service_request.try(:requester_contacted_date).try(:strftime, "%F"), :'data-sub_service_request_id' => sub_service_request.id, :class => 'fulfillment_data'