-@merged = true
- if @protocol.has_per_patient_per_visit? @service_request, @portal
  - @protocol.arms.each do |arm|
    .arm_calendar_container{:'data-arm_id' => arm.id}
      - next if arm.visit_groups.empty?
      = render :partial => "master_calendar/pppv_calendar", :locals => {:service_request => @service_request, :arm => arm}
- unless @study_tracker
  - if @protocol.has_one_time_fees? @service_request, @portal
    = render :partial => "master_calendar/otf_calendar", :locals =>{:current_request => @service_request}
= render :partial => 'merged_grand_totals', :locals => {:service_request => @service_request}
