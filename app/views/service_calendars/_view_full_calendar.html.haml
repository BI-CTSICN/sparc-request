.modal-dialog.full-calendar-modal
  .modal-content
    = hidden_field_tag :calendar_id, @protocol.id
    .modal-header
      %button.close{ type: 'button', data: { dismiss: 'modal' } }
        %span{ aria: { hidden: 'true' } } &times;
      %h4.text-center
        = t(:dashboard)[:service_calendars][:consolidated_request][:header]
    .modal-body
      #modal_errors
      .row
        .col-lg-12
          .panel-group
            - if has_pppv = @service_request.has_per_patient_per_visit_services?
              - @service_request.arms.each do |arm|
                - next if arm.visit_groups.empty?
                = render 'service_calendars/master_calendar/pppv/pppv_calendar', tab: @tab, arm: arm, service_request: @service_request, sub_service_request: @sub_service_request, page: @pages[arm.id], pages: @pages, review: @review, portal: @portal, merged: @merged

            - if has_otf = (@sub_service_request ? @sub_service_request.has_one_time_fee_services? : @service_request.has_one_time_fee_services?)
              = render 'service_calendars/master_calendar/otf/otf_calendar', tab: @tab, service_request: @service_request, sub_service_request: @sub_service_request, review: @review, portal: @portal

            - if has_pppv || has_otf
              = render 'service_calendars/master_calendar/merged_grand_totals', service_request: @service_request
            - elsif !has_pppv && !has_otf
              = render 'shared/alert', message: t(:dashboard)[:service_calendars][:consolidated_request][:services][:none]
    .modal-footer
      %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
        = t(:actions)[:close]
