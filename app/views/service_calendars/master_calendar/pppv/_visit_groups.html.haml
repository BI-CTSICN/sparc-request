- visit_groups.each_with_index do |visit_group, index|
  %th.visit_group_box.col-sm-1
    .row.text-center
      .col-xs-4.text-center
        %a.window-before{ href: 'javascript:void(0)', data: { type: 'text', pk: visit_group.id, name: 'window_before', title: t(:calendars)[:editable_fields][:window_before], value: visit_group.window_before, url: "/visit_groups/#{visit_group.id}" } }
      .col-xs-4.text-center
        %a.day{ href: 'javascript:void(0)', data: { type: 'text', pk: visit_group.id, name: 'day', value: visit_group.day || 0, title: t(:calendars)[:editable_fields][:day], url: "/visit_groups/#{visit_group.id}" } }
      .col-xs-4.text-center
        %a.window-after{ href: 'javascript:void(0)', data: { type: 'text', pk: visit_group.id, name: 'window_after', title: t(:calendars)[:editable_fields][:window_after], value: visit_group.window_after, url: "/visit_groups/#{visit_group.id}" } }
    .row.visit_group_names.text-center
      .col-sm-12.text-center{ data: { visit_group_id: visit_group.id } }
        %a.visit-group-name{ href: 'javascript:void(0)', data: { type: 'text', pk: visit_group.id, name: 'name', title: t(:calendars)[:editable_fields][:visit_name], value: visit_group.name, url: "/visit_groups/#{visit_group.id}" } }
- (visit_groups.size...Visit.per_page).each do |index|
  %th.col-sm-1.text-center{ class: "visit_group_#{index}" }
