- visit_groups = arm.visit_groups.paginate(page: page)
%thead
  %tr.header
    %th.text-center.study_schedule_table_name{ colspan: 2, rowspan: 2 }
      %span{ id: "arm-name-display-#{arm.id}" }= arm.name
    %th.text-center{ colspan: 2 }
      Unit Costs
    %th{ colspan: 1 }
    %th.text-center.visit_group_select{ id: "select_for_arm_#{arm.id}", colspan: 5 }
      = render partial: '/service_calendars/visit_group_page_select', locals: { arm: arm, service_request: service_request, ssr_id: sub_service_request.try(:id), page: page, pages: pages, merged: merged, review: review, tab: tab, portal: portal }
    %th{ colspan: 3 }
  %tr
    %th.text-center.header{ colspan: 1 }
      Service Rate
    %th.text-center.header{ colspan: 1 }
      Your Cost
    %th.text-center.header{ colspan: 1 }
      N
    = render partial: '/service_calendars/visit_groups', locals: { arm: arm, visit_groups: visit_groups, tab: tab }
    %th{ colspan: 2 }
- if tab == 'template'
  %tr
    %td{ colspan: 5 }
      &nbsp
    = render partial: '/service_calendars/check_visit_columns', locals: { visit_groups: visit_groups, tab: tab }
%tbody
  = render partial: 'service_calendars/master_calendar/pppv/pppv_line_items', locals: { service_request: service_request, arm: arm, tab: @tab, portal: @portal, sub_service_request: @sub_service_request, review: review }
