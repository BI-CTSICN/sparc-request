.devise_form#reset
  .grid_5.box
    .info
      %h2 Forgot your password?
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
        = devise_error_messages!
        .field
          = f.label :email, "Email:"
          = f.email_field :email
        #button
          = f.submit "Send me password reset instructions", {:class => 'btn ui-button ui-widget ui-state-default ui-corner-all'}
        .links
          = render "devise/shared/links"
        .clear