/////////////////////////////////////////////
//
// STUDY - Form for New/Editing Studies
//
/////////////////////////////////////////////

= form_for @protocol, :remote => true do |f|
  .grid_12
    %h3.blue-provider.step-header.ui-corner-all= t(:protocol_shared)[:step_text]
  = f.hidden_field :requester_id
  .clear
  = f.error_messages
  .edit-project-view= render :partial => 'studies/fields', :locals => {:study => study, :f => f}
  .continue
    .grid_12
      %div{:class => 'blue-provider'}
        .nav-backward
          .return-to-previous= link_to image_tag('CancelAction.png'), protocol_service_request_path(service_request)
        .exit= image_tag('Filler.png')
        .nav-forward
          .save-and-continue
            %input{:type => 'image', :src => '/assets/SaveContinueOld.png', :alt => "SaveAndContinue"}
