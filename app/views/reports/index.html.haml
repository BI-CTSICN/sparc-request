= javascript_include_tag 'reporting'
#reporting_tabs
  %ul
    %li= link_to t(:reports)[:defined_reports], '#defined_reports'
    %li= link_to t(:reports)[:custom_report], '#custom_report'

  #defined_reports
    #defined_reports_step_1
      #defined_reports_description= t(:reports)[:defined_reports_desc]
      = form_tag setup_reports_path, :method => :get, :remote => true do
        = select_tag "report", options_for_select($canned_reports.map{|x| [x.titleize, x]})
        %br
        %br
        = submit_tag t(:reports)[:proceed] 
        %br
        %br
    #defined_reports_step_2

  #custom_report
