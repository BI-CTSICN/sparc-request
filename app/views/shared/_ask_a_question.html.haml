.ask-a-question
  = form_tag ask_a_question_service_requests_path, :remote => true do
    .ask-us-button(href="javascript:void(0);")
      %span#ask_a_question_header Ask us a question!
      %div(style="float:right")
        %img.carat.up-carat(src="/assets/white_arrow_up.png")
        %img.carat.down-carat(src="/assets/white_arrow_down.png")
    .ask-a-question-form-container
      .your-email       
        %label(for="quick_question_email") Your email:
        = text_field_tag 'quick_question_email'
      .your-question
        %label(for="quick_question_body") Your question:
        = text_area_tag 'quick_question_body', nil, :style => 'width:153px; height:75px'
      .question-submit.right-align
        %input.submit_question(type="submit" value="Ask Question")
