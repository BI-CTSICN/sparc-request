%table.authorized-users
  %thead
    %tr
      %th.authorized-users-section{:colspan => 3}
        = t(:user_information)
      %th.authorized-users-section{:colspan => 4}
        = t(:proxy_rights)
        %br
        %span= t(:rights_message)
  %thead
    %tr
      %th= t(:displayed_name)
      %th= t(:actions)
      %th= t(:displayed_role)
      %th.proxy-rights= t(:member_rights)
      %th.proxy-rights= t(:view_rights)
      %th.proxy-rights= t(:services_rights)
      %th.proxy-rights
        = t(:charge_rights1)
        %br
        = t(:charge_rights2)
  %tbody
    - protocol.project_roles.each do |pr|
      = render :partial => 'shared/user_proxy_right', :locals => {:project_role => pr}

%br
