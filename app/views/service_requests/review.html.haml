= javascript_include_tag 'review'

= form_tag navigate_service_request_path(@service_request), {:id => 'navigation_form', :class => 'root-view', :multipart => true} do
  = hidden_field_tag :location, ''
  = hidden_field_tag :validates, ''
  = render :partial => 'steps'

  #participate_in_survey{:title => t(:sr_review)[:participate_in_survey_title]} 
    = t(:sr_review)[:participate_in_survey] 

  .grid_12
    .view-anchor
      .review-view
        .review-details
          %p.instructions= t(:sr_review)[:instructions]
          .project
            = render :partial => 'service_requests/review/study_project_information', :locals => {:protocol => @protocol}
          .documents
            = render :partial => 'service_requests/document_list', :locals => {:service_list => @service_list, :review => true}
          .notes
            %table
              %thead
                %tr
                  %th.light-blue-provider= t(:sr_review)[:notes_header]
              %tbody
                %tr
                  %td= @service_request.notes
          #service_calendar_container
            - @service_request.arms.each do |arm|
              = render :partial => 'service_requests/review/calendar', :locals => {:arm => arm}
            = render :partial => 'service_requests/review/review_totals'
          %br
          %br
          %br
          %div
            .return-to-step-3
              .return-to-previous= navigation_link image_tag('go_back.png'), @back
            .save-as-draft= navigation_link image_tag('wait_save_draft.png'), 'save_and_exit'
            .obtain-research-pricing
              = link_to image_tag( 'obtain_research_pricing.png'), obtain_research_pricing_service_request_path
            .submit-request
              = link_to image_tag( 'confirm_request.png'), confirmation_service_request_path, :class => "save-and-continue", :id => 'submit_services'
      .footer


