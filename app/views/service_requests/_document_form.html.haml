- provider_css ||= 'ui-widget-header'
= javascript_include_tag 'document_upload'

-# TODO this is ugly but works for now
- orgs = []
- first_doc_type = nil
- first_doc = nil
- orgs = @grouping.documents.map{|d| d.sub_service_request.organization_id} if @grouping
- first_doc_type = @grouping.documents.first.doc_type if @grouping
- first_doc_type_other = @grouping.documents.first.doc_type_other if first_doc_type == 'other'
- first_doc = @grouping.documents.first if @grouping
- button_text = @grouping ? t("documents.update_button") : t("documents.upload_button")
= hidden_field_tag :document_grouping_id, @grouping.id if @grouping
-# ugly but working

%table#new_document
  %tr.ui-dialog-titlebar{:class => provider_css}
    %th= t("documents.headers.recipients")
    %th= t("documents.headers.allow")
    %th= t("documents.headers.type")
    %th= t("documents.headers.file")
    %th &nbsp;
  %tr
    %td{:style => "text-align:left"}
      - @service_list.each do |key, values|
        - next unless @sub_service_request.nil? or @sub_service_request.organization.name == values[:process_ssr_organization_name]
        = label_tag "process_ssr_organization_ids[]", values[:name]
        %br
    %td
      - @service_list.each do |key, values|
        - next unless @sub_service_request.nil? or @sub_service_request.organization.name == values[:process_ssr_organization_name]
        - if @sub_service_request.nil?
          = check_box_tag "process_ssr_organization_ids[]", key, orgs.include?(key)
        - else
          Yes
          = hidden_field_tag "process_ssr_organization_ids[]", key, :id => 'process_ssr_organization_ids', :disabled => (@grouping ? false : true) 
        %br
    %td
      = select_tag :doc_type, options_for_select(DOCUMENT_TYPES, first_doc_type), :prompt => t("documents.select_prompt")
      .document_type_other{:style => first_doc_type == 'other' ? '' : 'display:none;'}
        = text_field_tag :doc_type_other, first_doc_type_other
    %td#file
      - if @grouping
        = first_doc.document_file_name
        %br
      = file_field_tag :document
    %td
      = navigation_link button_text, 'document_management', 'upload_button'
      = link_to t("documents.cancel_button"), "javascript:void(0)", :class => "ui_close_button", :id => 'cancel_upload'
