%table{cellpadding: 4}
  %tbody
    %tr
      %th.date_submitted{colspan: 4}
        Date Submitted: 
        = @service_request.submitted_at.strftime('%m/%d/%Y')
      %th.short_title{colspan: 2}
        Short Title: 
        = @service_request.protocol.short_title
    %tr
      %th Service Request ID:
      %th Institution:
      %th Provider: 
      %th{colspan: 2} Program/Core:
      %th Contact:
    - @service_request.sub_service_requests.each do |ssr|
      %tr.provider-header
        %td
          = @service_request.protocol.id
          \-
          = ssr.ssr_id
        %td= ssr_institution(ssr.organization) 
        %td= ssr_provider(ssr.organization) 
        %td= ssr_program_core(ssr.organization)
        %td= raw(ssr.line_items.map{|li| li.service.abbreviation}.join("<br />"))
        %td= raw(ssr_primary_contacts(ssr.organization))
