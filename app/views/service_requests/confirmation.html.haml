= javascript_include_tag 'review'
= form_tag navigate_service_request_path(@service_request), {:id => 'navigation_form', :class => 'root-view', :multipart => true} do
  = hidden_field_tag :location, ''
  = hidden_field_tag :validates, ''
  = render :partial => 'steps'
  .grid_12
    .view-anchor
      .confirmation-view
        .confirmation-details
          %p.instructions= t(:sr_confirmation)[:instructions]
          = render :partial => 'confirmation_details'
          - if USE_EPIC
            = render :partial => 'push_to_epic'
          .links
            .confirmation-button
              = link_to t(:sr_confirmation)[:download_button], service_request_path(:format => :xlsx)
            .confirmation-button
              = link_to t(:sr_confirmation)[:portal_button], USER_PORTAL_LINK, :class => "user-portal"
    .footer
