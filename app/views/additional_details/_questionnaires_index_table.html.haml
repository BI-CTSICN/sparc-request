- @questionnaires.each do |questionnaire|
  %tr
    %td
      .text-center
        = questionnaire.name
    %td
      .text-center
        = link_to additional_details_submissions_path(questionnaire_id: questionnaire.id), class: 'btn btn-primary' do
          Responses
          %span.badge
            = questionnaire.submissions.count
    %td
      .text-center
        = @questionable.name
    %td
      .text-center
        = questionnaire.active
    %td
      .text-center
        - if questionnaire.active?
          = link_to t(:additional_details)[:disable_questionnaire], additional_details_questionnaire_path( id: questionnaire.id, questionnaire: { questionable_id: @questionable, questionable_type: @questionable.class.name, active: 0 }), method: :patch, class: 'btn btn-danger active-questionnaire', remote: true
        - else
          = link_to t(:additional_details)[:activate_questionnaire], additional_details_questionnaire_path( id: questionnaire.id, questionnaire: { questionable_id: @questionable, questionable_type: @questionable.class.name, active: 1 }), method: :patch, class: 'btn btn-success inactive-questionnaire', remote: true
    %td
      .text-center
        = link_to edit_additional_details_questionnaire_path(questionnaire, questionable_id: @questionable, questionable_type: @questionable.class.name), class: 'btn btn-info' do
          %span.glyphicon.glyphicon-pencil
    %td
      .text-center
        = link_to additional_details_questionnaire_path(questionnaire, questionable_id: @questionable, questionable_type: @questionable.class.name),
          method: :delete, class: 'btn btn-danger' do
          %span.glyphicon.glyphicon-remove
