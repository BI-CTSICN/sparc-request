!!!
%html
  %head
    %title= t(:portal_title)
    = stylesheet_link_tag 'portal/application'
    = stylesheet_link_tag 'study_tracker'
    = javascript_include_tag 'portal/application'
    = javascript_include_tag 'jquery.qtip.min.js'
    /[if IE]
      = stylesheet_link_tag 'ie'
    /[if gt IE 7]
      = stylesheet_link_tag 'ie8_plus'
    /[if lt IE 8]
      = javascript_include_tag "ie7_warning"
    = csrf_meta_tags

  %body
    #ie7_warning{:style => 'display: none'}
      %p= t('ie_warning.text1')
      %br
      %p= t('ie_warning.text2')

    #container.container
      #processing_request.ui-corner-all{:style => 'display:none'}
        %br
        = t(:cm_index)[:processing]
        %br
        = image_tag 'spinner.gif'
      #header
        = render :partial => 'layouts/portal/header'
        %input#current_user_id{:type => 'hidden', :value => @user.try(:id)}
      #welcome_msg{:style => 'float:right;'}= show_welcome_message(@user)
      #main
        #title
          %h1= render :partial => 'portal/home/title'
        #content
          .notification_dialog
          = yield
  %footer
    = render :partial => 'shared/piwik_tracking' if Rails.env == 'production'
