!!! 1.1
%html{"ng-app" => "app", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/
    %title= t 'application_title'
    = stylesheet_link_tag    "additional_detail/application"
    = javascript_include_tag "additional_detail/application"
    = csrf_meta_tags
  %body{:id => "body"}
    %nav.navbar.navbar-default{"ng-controller" => "navController"}
      .container-fluid
        .navbar-header
          %ol.breadcrumb.navbar-nav{:id=>"nav"}
            %li
              %a{:href=>"/portal/admin"} Portal Admin
            %li
              %a{:href=>"/catalog_manager/"} Catalog Manager
            %li
              %a{:href=>"/additional_detail/"} Additional Details
                
    .container-fluid
      = yield
    = javascript_include_tag "additional_detail/bootstrap-accessibility.min"